/* Papier & Handschrift - wie ein beschriebenes Notizbuch */
@import url('https://fonts.googleapis.com/css2?family=Caveat:wght@400;600;700&family=Patrick+Hand&display=swap');

:root {
    --bg: #f4efe1;
    --fg: #2c2416;
    --fg-muted: #7a6e5d;
    --border: #d4c9b0;
    --border-light: #e2d9c5;
    --bg-code: #ece6d4;
    --bg-blockquote: #ece6d4;
    --accent: #8b4513;
    --accent-hover: #a0522d;
}

body {
    font-family: 'Patrick Hand', 'Caveat', cursive !important;
    font-size: 19px !important;
    line-height: 1.8 !important;
    background:
        repeating-linear-gradient(
            transparent,
            transparent 31px,
            #d4c9b0 31px,
            #d4c9b0 32px
        ),
        #f4efe1 !important;
    background-attachment: local !important;
}

.container { max-width: 750px; }

.content h1, .content h2, .content h3, .content h4, .content h5, .content h6 {
    font-family: 'Caveat', cursive;
}

